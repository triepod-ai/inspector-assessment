{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": "..",
    "paths": {
      "@/*": ["client/src/*"]
    }
  },
  "include": ["*.ts", "lib/**/*.ts", "__tests__/**/*.ts"]
}
