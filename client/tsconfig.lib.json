{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/services/assessment/**/*.ts",
    "src/lib/assessmentTypes.ts",
    "src/lib/aupPatterns.ts",
    "src/lib/policyMapping.ts",
    "src/lib/reportFormatters/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/__tests__/**"]
}
